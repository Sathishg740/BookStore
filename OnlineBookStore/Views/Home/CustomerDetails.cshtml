@model OnlineBookStore.Models.CustomerDetails
@{
    ViewData["Title"] = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Customer.css" />

<div class="customer-conatiner">
    <div class="customer-main">
        <div class="customer-body">
            <form asp-action="CustomerDetails">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label">State</label>
                <input asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Pincode" class="control-label">Pincode</label>
                <input asp-for="Pincode" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="fbtn">
            </div>
                </form>
        </div>

    </div>
</div>

