@model IEnumerable<OnlineBookStore.Models.Book>
@{
    ViewData["Title"] = "ActivityDetails";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card {
            font-style: oblique;
        }

        img.card-img-top.h-100 {
            height: 300px;
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="m-4">
        <div class="card">
            <div class="row g-0">
                <div class="col-sm-5">
                    <img src="~/Images/mickybook.jpg" class="card-img-top h-100" alt="...">
                </div>
                <div class="col-sm-7">
                    @foreach (var item in Model)
                    {
                        <div class="card-body">
                            <h3>Book Name :</h3> <p class="card-text"> @Html.DisplayFor(modelItem => item.Name)</p>
                            <h3>Book Author :</h3>  <p class="card-text">@Html.DisplayFor(modelItem => item.Author)</p>
                            <h3>Book Cost :</h3> <p class="new-price">@Html.DisplayFor(modelItem => item.Cost)</p>
                           <a href="/Home/Cart">
                                <button type="button" class="btn btn-primary">
                                    Add to Cart
                                </button>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>