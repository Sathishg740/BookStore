@model OnlineBookStore.Models.Register
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>
<link rel="stylesheet" href="~/css/Register.css" />
<div class="card">
<input type='checkbox' id='form-switch'>
<form id='login-form' action="" method='post'>
    <label>
        <span>Email</span>
        <input type="email" class="form-control" asp-for="LoginEmail" />
    </label>
    <label>
        <span>Password</span>
        <input type="password" class="form-control" asp-for="LoginPassword" />
    </label>
    <button type="submit" asp-action="Login"> Login</button>
    <label for='form-switch'><span>Register</span></label>
</form>
</div>

<form id='register-form' action="" method='post'>
    <div class="form-group">
        <label>
            <span>Name</span>
            <input type="text" class="form-control" asp-for="Name" />
        </label>
    </div>
    <div class="form-group">
        <label>
            <span>Email</span>
            <input type="text" class="form-control" asp-for="Email" />
        </label>
    </div>
    <div class="form-group">
        <label>
            <span>Password</span>
            <input type="password" class="form-control" asp-for="Password" />
        </label>
    </div>
    <input type="submit" asp-action="Registration" value="Registration" />
    <label for='form-switch'>Already Member ? Sign In Now..</label>
</form>

<script>
        var result = @ViewBag.Result
            console.log(result);
        if (result == 1) {
            alert("Signup sucessfull");
        }
</script>
<script>
       var query = @ViewBag.Query
             console.log(query);
         if (query!= 1) {
             alert("Please enter valid email and password");
         }
         else {
             alert("login sucessfull redirecting to home page");
         }
</script>