
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untitled</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .card-img-top {
            padding: 25px;
            height: 180px;
        }

        .card {
            background-color: rgba(245,245,245,0.4);
            border-radius: 20px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: rgba(1,1,1,0.4);
            opacity: 1;
            text-align: center;
        }
       
        .description {
            text-align: justify;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
        }

        .head1 {
            text-align: center;
            text-transform: capitalize;
            margin: 8px;
            padding-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="team-boxed">
        <div class="container">
            <h3 class="head1">choose your preferred one...</h3>
            <div class="row">

                <div class="col-md-4 col-lg-4 item">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/activity.jpg">
                        <h3 class="card-header name">Activity</h3>
                        <div class="card-body">
                            <p class="card-text description">Activity </p>
                            <a asp-controller="Home" asp-action="ActivityBooks"> <button type="button" class="btn btn-info">View</button></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 item">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/story.jpg">
                        <h3 class="card-header name">Activity</h3>
                        <div class="card-body">
                            <p class="card-text description">Story </p>
                            <a asp-controller="Home" asp-action="StoryBooks"> <button type="button" class="btn btn-info">View</button></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 item">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/subjects.jpg">
                        <h3 class="card-header name">Subjects</h3>
                        <div class="card-body">
                            <p class="card-text description">Subject </p>
                            <a asp-controller="Home" asp-action="SubjectBooks"> <button type="button" class="btn btn-info">View</button></a>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>